
table Gemstone {
  shine:double;
}

table Arms {
  count:uint8;
}

table Skull {
  name:string;
}

union ShieldDecorator { Gemstone, Arms, Skull }

table Sword {
  name:string;
  damage:short;
}

table Shield {
  protection:float;
  primaryDecorator: ShieldDecorator;
  decorators:[ShieldDecorator];
}

union Equipment { Sword, Shield }

table Monster {
  equipped:Equipment;
}

root_type Monster;
